{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "mixte": ["./packages/mixte/src/index.ts"],
      "@mixte/use/register": ["./packages/use/src/register.ts"],
      "@mixte/use/nuxt": ["./packages/use/src/nuxt.ts"],
      "@mixte/components/*": ["./packages/components/src/*/index.ts"],
      "@mixte/snippets/*": ["./packages/snippets/src/*/index.ts"],
      "@mixte/snippets/dist/tiptap-editor/css/*": ["./packages/snippets/src/tiptap-editor/src/css/*"],
      "@mixte/snippets/tiptap-editor/*": [
        "./packages/snippets/src/tiptap-editor/src/*",
        "./packages/snippets/src/tiptap-editor/*"
      ],
      "@mixte/mel-components/*": ["./packages/mel-components/src/*/index.ts"],
      "@mixte/*": ["./packages/*/src/index.ts"],
      "@/*": ["./packages/*"],
      "@@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest/globals",
      "element-plus/global",
      "naive-ui/volar",
      "unplugin-icons/types/vue"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "meta",
    "scripts",
    "packages",
    "packages/.vitepress/**/*.ts",
    "packages/.vitepress/**/*.vue",
    "*.{ts,vue}"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "coverage"
  ]
}

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "vite/client",
      "vitest/globals",
      "element-plus/global"
    ],
    "paths": {
      "@/*": ["./packages/*"],
      "@@/*": ["./*"]
    }
  },
  "include": [
    "packages",
    "packages/.vitepress/**/*.ts",
    "packages/.vitepress/**/*.vue",
    "*.{ts,vue}"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "coverage"
  ]
}

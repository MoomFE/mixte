{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "mixte": ["./packages/mixte/src/index.ts"],
      "@mixte/use/register": ["./packages/use/src/register.ts"],
      "@mixte/use/nuxt": ["./packages/use/src/nuxt.ts"],
      "@mixte/components/*": ["./packages/components/src/*/index.ts"],
      "@mixte/snippets/*": ["./packages/snippets/src/*/index.ts"],

      "@mixte/components/dist/grid-table/css/*": ["./packages/components/src/grid-table/src/css/*"],
      "@mixte/components/grid-table/*": [
        "./packages/components/src/grid-table/src/*",
        "./packages/components/src/grid-table/*"
      ],
      "@mixte/components/dist/scrollbar/css/*": ["./packages/components/src/scrollbar/src/css/*"],
      "@mixte/components/scrollbar/*": [
        "./packages/components/src/scrollbar/src/*",
        "./packages/components/src/scrollbar/*"
      ],

      "@mixte/snippets/dist/tiptap-editor/css/*": ["./packages/snippets/src/tiptap-editor/src/css/*"],
      "@mixte/snippets/tiptap-editor/*": [
        "./packages/snippets/src/tiptap-editor/src/*",
        "./packages/snippets/src/tiptap-editor/*"
      ],
      "@mixte/snippets/dist/lottery/css/*": ["./packages/snippets/src/lottery/src/css/*"],
      "@mixte/snippets/lottery/*": [
        "./packages/snippets/src/lottery/src/*",
        "./packages/snippets/src/lottery/*"
      ],
      "@mixte/snippets/ant-design-x/*": [
        "./packages/snippets/src/ant-design-x/src/*",
        "./packages/snippets/src/ant-design-x/*"
      ],
      "@mixte/snippets/dist/low-code-editor/css/*": ["./packages/snippets/src/low-code-editor/src/css/*"],
      "@mixte/snippets/low-code-editor/*": [
        "./packages/snippets/src/low-code-editor/src/*",
        "./packages/snippets/src/low-code-editor/*"
      ],

      "@mixte/mel-components/*": ["./packages/mel-components/src/*/index.ts"],
      "@mixte/*": ["./packages/*/src/index.ts"],
      "@/*": ["./packages/*"],
      "@@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest/globals",
      "@vitest/browser/providers/playwright",
      "element-plus/global",
      "naive-ui/volar",
      "unplugin-icons/types/vue"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "meta",
    "scripts",
    "packages",
    "packages/.vitepress/**/*.ts",
    "packages/.vitepress/**/*.vue",
    "*.{ts,vue}"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "coverage"
  ]
}
